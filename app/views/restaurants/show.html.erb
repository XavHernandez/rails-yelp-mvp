<h2><%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address %> - Category: <%= @restaurant.category %></p>
<br>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item mb-2"><%= review.content %> - <%= review.rating %></li>
  <% end %>
</ul>
<br>
<div>
<%= simple_form_for [ @restaurant, @review ] do |r| %>
  <%= r.input :content %>
  <%= r.input :rating %>
  <%= r.submit "Submit Review", class: "btn btn-primary my-3" %>
<% end %>
</div>

<p> <%= link_to "Return to Restaurants List", restaurants_path %> </p>
