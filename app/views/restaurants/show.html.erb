<h2><%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address %> - Category: <%= @restaurant.category %></p>
<br>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %></li>
  <% end %>
</ul>

<p> <%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant) %> </p>
<p> <%= link_to "Return to Restaurants List", restaurants_path %> </p>
